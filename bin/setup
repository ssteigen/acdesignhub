#!/usr/bin/env sh

# Fail on errors.
set -e

# Debug mode - print commands.
[ -n "$DEBUG" ] && set -x

PROJECT_ROOT="$(git rev-parse --show-toplevel)"

main () {
  cd "$PROJECT_ROOT" || exit 1
  pip install -r requirements.txt
  python ./manage.py migrate
  python ./manage.py runserver
}

main "$@"
